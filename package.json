{
  "name": "nestjs-realworld-example-app",
  "version": "1.0.0",
  "description": "NestJS + MikroORM realworld API example (MySQL)",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config=jest.json",
    "test:watch": "jest --watch --config=jest.json",
    "test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage",
    "test:e2e": "APIURL=http://koakh-laptop:3000/api ./e2e/run-api-tests.sh",
    "package:upgrade": "pnpm up",
    "docker:build": "docker build . -t koakh-nestjs-realworld-example-app:latest",
    "docker:build:nocache": "docker build . -t koakh-nestjs-realworld-example-app:latest --no-cache",
    "docker:run": "docker run -it koakh-nestjs-realworld-example-app:latest sh",
    "docker:teardown": "docker-compose down --volumes --remove-orphans && rm dist/ -R || true",
    "docker:up": "docker-compose up -d && pnpm docker:logs",
    "docker:down": "docker-compose down --volumes --remove-orphans",
    "docker:logs": "docker-compose logs -f app",
    "schema:drop": "npx mikro-orm schema:drop --dump",
    "migration:create": "rm dist/ -R || true && rm src/migrations -R || true && npx mikro-orm migration:create",
    "migration:up": "npx mikro-orm migration:up",
    "migration:seed": "npx mikro-orm migration:fresh --seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikro-orm/nestjs-realworld-example-app.git"
  },
  "author": "banan23@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikro-orm/nestjs-realworld-example-app/issues"
  },
  "homepage": "https://github.com/mikro-orm/nestjs-realworld-example-app#readme",
  "renovate": {
    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":semanticCommitTypeAll(chore)"
    ],
    "semanticCommits": "enabled",
    "separateMajorMinor": false,
    "dependencyDashboard": false,
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": [
        "before 2am"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    "packageRules": [
      {
        "matchUpdateTypes": [
          "patch",
          "minor"
        ],
        "groupName": "patch/minor dependencies",
        "groupSlug": "all-non-major",
        "automerge": true,
        "automergeType": "branch"
      }
    ],
    "schedule": [
      "every weekday"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "^5.6.2",
    "@mikro-orm/migrations": "^5.6.2",
    "@mikro-orm/nestjs": "^5.1.5",
    "@mikro-orm/postgresql": "^5.6.2",
    "@mikro-orm/reflection": "^5.6.2",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "crypto-js": "^4.1.1",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "slug": "^8.2.2",
    "swagger-ui-express": "^4.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.6.2",
    "@mikro-orm/seeder": "^5.6.2",
    "@nestjs/cli": "^9.1.7",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/express": "^4.17.15",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "atob": "^2.1.2",
    "deep-extend": "^0.6.0",
    "eslint": "^8.30.0",
    "extend": "^3.0.2",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
